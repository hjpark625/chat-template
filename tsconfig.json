{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES5", "ES6"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "rootDir": "./src",
        "types": ["node"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}